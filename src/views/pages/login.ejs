<%- include(views_path + 'partials/layout/_header.ejs', { title: (isLoginPage ?
'Login' : 'Register') + ' - ' + appName, scripts: [{src:
'/static/js/pages/login.js', attributes: 'defer'}] } ); -%>

<div class="login-page-container container clearfix">
  <h1><%= isLoginPage ? 'Login' : 'Register new account' %></h1>

  <form
    id="form-login"
    class="form-common"
    action="<%= apiBaseUrl %>/auth/<%= isLoginPage ? 'login' : 'register' %>"
    method="POST"
  >
    <div class="input-group">
      <label for="form-login-nickname">Nickname</label>
      <input
        id="form-login-nickname"
        type="text"
        name="nickname"
        placeholder="Nickname"
        autocomplete="off"
        minlength="4"
        maxlength="30"
        pattern="\w+"
        title="Only alphanumeric characters (4-30 length)."
        required
      />
    </div>

    <div class="input-group">
      <label for="form-login-password">PIN</label>
      <input
        id="form-login-password"
        type="password"
        name="password"
        placeholder="PIN"
        autocomplete="off"
        minlength="4"
        maxlength="4"
        pattern="[0-9]*"
        title="4 digits pin."
        required
        inputmode="numeric"
      />
    </div>

    <div class="input-group">
      <button type="submit"><%= isLoginPage ? 'Log In' : 'Register' %></button>
    </div>
    <div class="mt-2 text-right">
      <% if (isLoginPage) { %>
      <span>Do not have an account?</span>
      <a href="/register" class="ml-4">Register one now!</a>
      <% } else { %>
      <span>Already have an account?</span>
      <a href="/login" class="ml-4">Login now!</a>
      <% } %>
    </div>
  </form>
</div>

<%- include(views_path + 'partials/layout/_footer.ejs'); -%>
